<div class="new-wrapper">
  <div class="input-forms">

  <h2>＜対局情報入力＞</h2>

    <%= form_with(model: @kifu, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <div class="input-field">
        <%= f.label :date, '日付：' %>
        <%= raw sprintf(
                    f.date_select(
                        :date,
                        use_month_numbers: true,
                        start_year:        2020,
                        end_year:          2021,
                        default:           Date.today,
                        date_separator:    '%s'),
                    '年 ', '月 ') + '日'
        %>
      </div>

      <div class="input-field">
        <%= f.label :sente_id, '先手：' %>
        <%= f.collection_select :sente_id, Sente.all, :id, :name, {} %>
      </div>

      <div class="input-field">
        <%= f.label :gote_id, '後手：' %>
        <%= f.collection_select :gote_id, Gote.all, :id, :name, {} %>
      </div>

      <div class="input-field">
        <%= f.label :result_id, '結果：' %>
        <%= f.collection_select :result_id, KifuResult.all, :id, :name, {} %>
      </div>

      <div class="input-field">
        <%= f.label :kifu, '棋譜' %><br>
        <%= f.text_area :kifu, placeholder: '棋譜を貼り付け', size: "35x10"  %>
      </div>

      <div class="submit">
        <%= f.submit "更新", class: 'submit-btn' %>
      </div>

      <div class="back">
        <%= link_to "棋譜一覧へ戻る", root_path, class: "back-btn" %>
      </div>
    <% end %>
  </div>
</div>